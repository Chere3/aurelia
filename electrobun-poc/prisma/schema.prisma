generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FocusSession {
  id              String   @id @default(cuid())
  startedAt       DateTime @default(now())
  endedAt         DateTime?
  phase           String
  taskTitle       String
  requiresComputer Boolean
  lockMode        String
  plannedSeconds  Int
  elapsedSeconds  Int
  completed       Boolean  @default(false)
  createdAt       DateTime @default(now())
}
